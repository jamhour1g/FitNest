<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="340dp"
    android:layout_height="180dp"
    android:layout_gravity="center"
    android:elevation="30dp"
    android:padding="10dp"
    app:cardCornerRadius="15dp"
    app:contentPadding="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:padding="5dp"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/exercise_categoryImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@android:drawable/ic_menu_gallery" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/exerciseNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:gravity="center"
                android:text="Exercise Name"
                android:textColor="@color/secondary_color"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/exerciseBodyParts"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:fontFamily="@font/alata"
                    android:text="None"
                    android:textColor="@color/secondary_color_gray"
                    android:textSize="11sp" />
            </LinearLayout>

            <View
                android:id="@+id/divider3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/exerciseLevelTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/alata"
                    android:padding="5dp"
                    android:text="HARD"
                    android:textColor="@color/secondary_color_gray"
                    android:textSize="11sp"
                    android:textStyle="normal"
                    app:drawableLeftCompat="@drawable/difficulties_icon" />

                <TextView
                    android:id="@+id/exerciseDurationTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/alata"
                    android:padding="5dp"
                    android:text="50 Hours"
                    android:textColor="@color/secondary_color_gray"
                    android:textSize="11sp"
                    android:textStyle="normal"
                    app:drawableLeftCompat="@drawable/baseline_access_time_filled_24" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/favorite_icon" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>