<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="340dp"
    android:layout_height="180dp"
    android:layout_gravity="center"
    android:elevation="30dp"
    android:padding="10dp"
    app:cardCornerRadius="15dp"
    app:contentPadding="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/categoryImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="@dimen/material_emphasis_high_type"
            app:srcCompat="@android:drawable/ic_menu_gallery" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/categoryNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:gravity="center"
                android:text="Category Name"
                android:textColor="@color/secondary_color"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/categoryDurationTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/alata"
                    android:padding="5dp"
                    android:text="50 Hours"
                    android:textColor="@color/secondary_color_gray"
                    android:textSize="11sp"
                    android:textStyle="normal"
                    app:drawableLeftCompat="@drawable/baseline_access_time_filled_24" />

                <TextView
                    android:id="@+id/numOfExercisesTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/alata"
                    android:padding="5dp"
                    android:text="50 Exercises"
                    android:textColor="@color/secondary_color_gray"
                    android:textSize="11sp"
                    android:textStyle="normal"
                    app:drawableLeftCompat="@drawable/ic_action_name" />

            </LinearLayout>

            <View
                android:id="@+id/divider3"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:background="?android:attr/listDivider" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                app:srcCompat="@drawable/outline_arrow_circle_right_24" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>